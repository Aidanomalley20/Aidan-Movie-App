datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  watchlist Movie[]
}

model Movie {
  id        Int      @id @default(autoincrement())
  title     String
  posterUrl String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
